{
    "compilerOptions": {
      "target": "es2017",                          
      "module": "commonjs",                     
      "lib": ["es6"],                             
      "allowJs": true,                       
      "outDir": "./dist",                        
      "rootDir": "./src", 
      "baseUrl": ".",          
      "removeComments": true,                
      "typeRoots": [
        "./node_modules/@types",
        "./src/@types"
      ],                          
      "esModuleInterop": true,                  
      "resolveJsonModule": true,
      "experimentalDecorators": true,        
      "emitDecoratorMetadata": true,         
      "skipLibCheck": true,                     
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "paths": {
        "@controllers/*": ["./src/controllers/*"],
        "@models/*": ["./src/models/*"],
        "@config/*": ["./src/config/*"],
        "@constants/*": ["./src/constants/*"],
        "@services/*": ["./src/services/*"],
        "@middlewares/*": ["./src/middlewares/*"],
        "@type/*": ["./src/@types/*"],
        "@utils/*": ["./src/utils/*"]
      }
    },
    "include": [
      "src/**/*"
    ]
  }